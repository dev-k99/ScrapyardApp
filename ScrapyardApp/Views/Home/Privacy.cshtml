@{
    ViewData["Title"] = "Privacy Policy";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h1 class="h3 mb-0"><i class="bi bi-shield-check me-2"></i>@ViewData["Title"]</h1>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-8">
                        <div class="mb-4">
                            <h3 class="h5 text-primary fw-bold">
                                <i class="bi bi-info-circle me-2"></i>Data Collection and Usage
                            </h3>
                            <p>This scrapyard management system collects and stores the following types of data to provide essential business management services:</p>
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <div class="card border-0 bg-light">
                                        <div class="card-body">
                                            <h6 class="fw-bold text-success">
                                                <i class="bi bi-box me-2"></i>Inventory Data
                                            </h6>
                                            <p class="small mb-0">Scrap item details, quantities, and pricing information</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="card border-0 bg-light">
                                        <div class="card-body">
                                            <h6 class="fw-bold text-info">
                                                <i class="bi bi-people me-2"></i>Customer Information
                                            </h6>
                                            <p class="small mb-0">Contact details, transaction history, and preferences</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="card border-0 bg-light">
                                        <div class="card-body">
                                            <h6 class="fw-bold text-warning">
                                                <i class="bi bi-cart me-2"></i>Transaction Records
                                            </h6>
                                            <p class="small mb-0">Sales, purchases, and financial transaction details</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="card border-0 bg-light">
                                        <div class="card-body">
                                            <h6 class="fw-bold text-secondary">
                                                <i class="bi bi-clock-history me-2"></i>Audit Information
                                            </h6>
                                            <p class="small mb-0">System access logs and data modification history</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="mb-4">
                            <h3 class="h5 text-primary fw-bold">
                                <i class="bi bi-shield-lock me-2"></i>Data Security
                            </h3>
                            <p>We implement appropriate security measures to protect your data:</p>
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <ul class="list-unstyled">
                                        <li class="mb-2">
                                            <i class="bi bi-check-circle text-success me-2"></i>User authentication and authorization
                                        </li>
                                        <li class="mb-2">
                                            <i class="bi bi-check-circle text-success me-2"></i>Encrypted data transmission
                                        </li>
                                        <li class="mb-2">
                                            <i class="bi bi-check-circle text-success me-2"></i>Regular security updates
                                        </li>
                                    </ul>
                                </div>
                                <div class="col-md-6">
                                    <ul class="list-unstyled">
                                        <li class="mb-2">
                                            <i class="bi bi-check-circle text-success me-2"></i>Access control and permissions
                                        </li>
                                        <li class="mb-2">
                                            <i class="bi bi-check-circle text-success me-2"></i>Data backup and recovery
                                        </li>
                                        <li class="mb-2">
                                            <i class="bi bi-check-circle text-success me-2"></i>Audit trail monitoring
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>

                        <div class="mb-4">
                            <h3 class="h5 text-primary fw-bold">
                                <i class="bi bi-calendar-check me-2"></i>Data Retention
                            </h3>
                            <p>Your data is retained according to the following schedule:</p>
                            <div class="table-responsive">
                                <table class="table table-sm">
                                    <thead>
                                        <tr>
                                            <th>Data Type</th>
                                            <th>Retention Period</th>
                                            <th>Purpose</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>Business Transactions</td>
                                            <td>7 years</td>
                                            <td>Legal compliance and business records</td>
                                        </tr>
                                        <tr>
                                            <td>Customer Information</td>
                                            <td>Active + 3 years</td>
                                            <td>Customer service and relationship management</td>
                                        </tr>
                                        <tr>
                                            <td>Audit Logs</td>
                                            <td>5 years</td>
                                            <td>Security monitoring and compliance</td>
                                        </tr>
                                        <tr>
                                            <td>Price History</td>
                                            <td>10 years</td>
                                            <td>Market analysis and trend tracking</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <div class="mb-4">
                            <h3 class="h5 text-primary fw-bold">
                                <i class="bi bi-envelope me-2"></i>Contact Information
                            </h3>
                            <p>If you have any questions about this privacy policy or our data practices, please contact us:</p>
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <div class="card border-0 bg-primary text-white">
                                        <div class="card-body text-center">
                                            <i class="bi bi-envelope display-6 mb-2"></i>
                                            <h6 class="fw-bold">Email Support</h6>
                                            <p class="mb-0">privacy@scrapyard.com</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="card border-0 bg-success text-white">
                                        <div class="card-body text-center">
                                            <i class="bi bi-telephone display-6 mb-2"></i>
                                            <h6 class="fw-bold">Phone Support</h6>
                                            <p class="mb-0">+1 (555) 123-4567</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-4">
                        <div class="sticky-top" style="top: 2rem;">
                            <div class="card border-0 bg-light">
                                <div class="card-header bg-primary text-white">
                                    <h5 class="mb-0"><i class="bi bi-question-circle me-2"></i>Quick Links</h5>
                                </div>
                                <div class="card-body">
                                    <div class="d-grid gap-2">
                                        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                                            <i class="bi bi-house me-2"></i>Back to Home
                                        </a>
                                        <a href="#data-collection" class="btn btn-outline-primary">
                                            <i class="bi bi-box me-2"></i>Data Collection
                                        </a>
                                        <a href="#data-security" class="btn btn-outline-primary">
                                            <i class="bi bi-shield me-2"></i>Data Security
                                        </a>
                                        <a href="#data-retention" class="btn btn-outline-primary">
                                            <i class="bi bi-calendar me-2"></i>Data Retention
                                        </a>
                                        <a href="#contact" class="btn btn-outline-primary">
                                            <i class="bi bi-envelope me-2"></i>Contact Us
                                        </a>
                                    </div>
                                </div>
                            </div>

                            <div class="card border-0 bg-light mt-3">
                                <div class="card-header bg-info text-white">
                                    <h5 class="mb-0"><i class="bi bi-info-circle me-2"></i>Privacy Highlights</h5>
                                </div>
                                <div class="card-body">
                                    <div class="alert alert-info border-0 mb-0">
                                        <i class="bi bi-lightbulb me-2"></i>
                                        <strong>Your data is secure and private.</strong> We never share your information with third parties without your explicit consent.
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
