@model ScrapyardApp.Models.AuditLog
<h2>Audit Log Details</h2>
<div>
    <h4>@Model.Action on @Model.Entity</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Action)</dt>
        <dd class="col-sm-10">@Model.Action</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Entity)</dt>
        <dd class="col-sm-10">@Model.Entity</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.EntityId)</dt>
        <dd class="col-sm-10">@Model.EntityId</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.User.UserName)</dt>
        <dd class="col-sm-10">@Model.User.UserName</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.ActionDate)</dt>
        <dd class="col-sm-10">@Model.ActionDate.ToString("yyyy-MM-dd HH:mm:ss")</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Details)</dt>
        <dd class="col-sm-10">@Model.Details</dd>
    </dl>
</div>
<a asp-action="Index" class="btn btn-secondary">Back to List</a>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}