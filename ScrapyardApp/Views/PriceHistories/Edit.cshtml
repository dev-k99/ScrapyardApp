@model ScrapyardApp.Models.PriceHistory

<h2>Edit Price History</h2>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="ScrapItemId" class="control-label">Scrap Item</label>
                <select asp-for="ScrapItemId" class="form-control" asp-items="ViewBag.ScrapItems">
                    <option value="">-- Select Scrap Item --</option>
                </select>
                <span asp-validation-for="ScrapItemId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PricePerKg" class="control-label">Price Per Kg</label>
                <input asp-for="PricePerKg" class="form-control" />
                <span asp-validation-for="PricePerKg" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EffectiveDate" class="control-label">Effective Date</label>
                <input asp-for="EffectiveDate" class="form-control" type="datetime-local" />
                <span asp-validation-for="EffectiveDate" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
