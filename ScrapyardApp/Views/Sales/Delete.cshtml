@model ScrapyardApp.Models.Sale
<h2>Delete Sale</h2>
<h3>Are you sure you want to delete this sale?</h3>
<div>
    <h4>Sale: @Model.InvoiceNumber</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.ScrapItem.Name)</dt>
        <dd class="col-sm-10">@Model.ScrapItem.Name</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Customer.Name)</dt>
        <dd class="col-sm-10">@Model.Customer.Name</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.WeightSold)</dt>
        <dd class="col-sm-10">@Model.WeightSold</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.TotalPrice)</dt>
        <dd class="col-sm-10">@Model.TotalPrice</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.SaleDate)</dt>
        <dd class="col-sm-10">@Model.SaleDate.ToString("yyyy-MM-dd")</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.PaymentMethod)</dt>
        <dd class="col-sm-10">@Model.PaymentMethod</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.InvoiceNumber)</dt>
        <dd class="col-sm-10">@Model.InvoiceNumber</dd>
    </dl>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
