@model IEnumerable<ScrapyardApp.Models.Sale>
<h2>Sales</h2>
<a asp-action="Create" class="btn btn-primary">Record New Sale</a>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.ScrapItem.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Customer.Name)</th>
            <th>@Html.DisplayNameFor(model => model.WeightSold)</th>
            <th>@Html.DisplayNameFor(model => model.TotalPrice)</th>
            <th>@Html.DisplayNameFor(model => model.SaleDate)</th>
            <th>@Html.DisplayNameFor(model => model.PaymentMethod)</th>
            <th>@Html.DisplayNameFor(model => model.InvoiceNumber)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var sale in Model)
        {
            <tr>
                <td>@sale.ScrapItem.Name</td>
                <td>@sale.Customer.Name</td>
                <td>@sale.WeightSold</td>
                <td>@sale.TotalPrice</td>
                <td>@sale.SaleDate.ToString("yyyy-MM-dd")</td>
                <td>@sale.PaymentMethod</td>
                <td>@sale.InvoiceNumber</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@sale.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@sale.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>